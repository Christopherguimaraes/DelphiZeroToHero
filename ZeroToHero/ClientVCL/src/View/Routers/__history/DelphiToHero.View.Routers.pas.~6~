unit DelphiToHero.View.Routers;

interface

uses
  Router4D,
  DelphiToHero.View.Pages.Principal,
  DelphiToHero.View.Pages.Usuarios;

type
  TRouters = class
    private

    public
      constructor Create ;
      destructor Destroy ; override;
  end;

var
  Router : TRouters;
implementation

uses
  Router4D;

{ TRouters }

constructor TRouters.Create;
begin
  TRouter4D
    .Switch
      .Router('Principal', TPaginaPrincipal)
      .Router('Usuarios', TPageUsuarios)
end;

destructor TRouters.Destroy;
begin

  inherited;
end;
initialization
  Router := TRouters.Create;

finalization
  Router.Free;

end.
